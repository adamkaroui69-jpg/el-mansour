<Window x:Class="ElMansourSyndicManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:ElMansourSyndicManager.Views"
        xmlns:viewmodels="clr-namespace:ElMansourSyndicManager.ViewModels"
        xmlns:converters="clr-namespace:ElMansourSyndicManager.Converters"
        mc:Ignorable="d"
        Title="El Mansour Syndic Manager"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/Assets/logo.png"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:NotificationBackgroundConverter x:Key="NotificationBackgroundConverter"/>
        
        <!-- Style moderne pour les éléments de navigation -->
        <Style x:Key="ModernNavItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="10,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#40FFFFFF"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <materialDesign:DrawerHost x:Name="DrawerHost"
                              IsLeftDrawerOpen="True"
                              OpenMode="Standard">
        
        <!-- Menu Latéral Moderne -->
        <materialDesign:DrawerHost.LeftDrawerContent>
            <Grid Width="260">
                <!-- Fond Gradient -->
                <Border Background="{DynamicResource PrimaryHueMidBrush}">
                </Border>
                
                <DockPanel>
                    <!-- En-tête du Menu -->
                    <StackPanel DockPanel.Dock="Top" Margin="24,40,24,30">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="HomeCity" Width="32" Height="32" Foreground="White" Margin="0,0,12,0"/>
                            <TextBlock Text="El Mansour" 
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     Foreground="White" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Syndic Manager" 
                                 FontSize="12" 
                                 Foreground="White" 
                                 Opacity="0.7" 
                                 HorizontalAlignment="Center" 
                                 Margin="44,-4,0,0"/>
                    </StackPanel>

                    <!-- Liste de Navigation -->
                    <ListBox x:Name="NavigationListBox"
                            ItemsSource="{Binding NavigationItems}"
                            SelectionMode="Single"
                            Background="Transparent"
                            BorderThickness="0"
                            SelectedItem="{Binding SelectedNavigationItem}"
                            ItemContainerStyle="{StaticResource ModernNavItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                           Width="22" Height="22" 
                                                           Foreground="White" 
                                                           Margin="8,0,16,0"
                                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Title}" 
                                             Foreground="White" 
                                             FontSize="15"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Grid>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <!-- Contenu Principal -->
        <!-- Contenu Principal -->
        <Grid Background="{DynamicResource MaterialDesignPaper}"> <!-- Fond gris très clair pour le contenu -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barre Supérieure Blanche -->
            <materialDesign:ColorZone Grid.Row="0" 
                                      Padding="24,16"
                                      Mode="Standard"
                                      Background="{DynamicResource MaterialDesignCardBackground}"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bouton Hamburger (Couleur sombre pour contraste sur blanc) -->
                    <ToggleButton Grid.Column="0"
                                 Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                 IsChecked="{Binding ElementName=DrawerHost, Path=IsLeftDrawerOpen}"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 Width="24" Height="24"
                                 Margin="0,0,24,0"/>

                    <!-- Titre de la page active -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding SelectedNavigationItem.Title}"
                              FontSize="20"
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource MaterialDesignBody}"
                              VerticalAlignment="Center"/>

                    <!-- Actions Utilisateur -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        
                        <!-- Notifications Bell -->
                        <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Margin="0,0,16,0">
                            <materialDesign:PopupBox.ToggleContent>
                                <Grid>
                                    <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="20" Width="40" Height="40" Cursor="Hand">
                                        <materialDesign:PackIcon Kind="Bell" 
                                                               Width="22" Height="22" 
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <!-- Badge de notification -->
                                    <Border Background="#F44336" 
                                           CornerRadius="10" 
                                           Width="20" Height="20" 
                                           HorizontalAlignment="Right" 
                                           VerticalAlignment="Top"
                                           Margin="0,-4,-4,0"
                                           Visibility="{Binding HasNotifications, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="{Binding NotificationCount}" 
                                                 Foreground="White" 
                                                 FontSize="11" 
                                                 FontWeight="Bold"
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </materialDesign:PopupBox.ToggleContent>
                            
                            <StackPanel Width="320" MaxHeight="400">
                                <!-- Header -->
                                <Border Background="{DynamicResource PrimaryHueMidBrush}" Padding="16,12">
                                    <Grid>
                                        <TextBlock Text="Notifications" 
                                                 Foreground="White" 
                                                 FontSize="16" 
                                                 FontWeight="SemiBold"/>
                                        <Button Content="Tout marquer comme lu" 
                                               Command="{Binding MarkAllAsReadCommand}"
                                               Style="{StaticResource MaterialDesignFlatButton}"
                                               Foreground="White"
                                               FontSize="11"
                                               HorizontalAlignment="Right"
                                               Padding="8,4"/>
                                    </Grid>
                                </Border>
                                
                                <!-- Notifications List -->
                                <ScrollViewer MaxHeight="350" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Notifications}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="16,12" Background="{Binding IsRead, Converter={StaticResource NotificationBackgroundConverter}}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Border Grid.Column="0" 
                                                               Background="{Binding TypeColor}" 
                                                               CornerRadius="20" 
                                                               Width="36" Height="36" 
                                                               Margin="0,0,12,0">
                                                            <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                                                   Width="18" Height="18" 
                                                                                   Foreground="White"
                                                                                   HorizontalAlignment="Center" 
                                                                                   VerticalAlignment="Center"/>
                                                        </Border>
                                                        
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Title}" 
                                                                     FontWeight="SemiBold" 
                                                                     FontSize="13"
                                                                     TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding Message}" 
                                                                     FontSize="12" 
                                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                     TextWrapping="Wrap"
                                                                     Margin="0,4,0,0"/>
                                                            <TextBlock Text="{Binding TimeAgo}" 
                                                                     FontSize="11" 
                                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                     Margin="0,4,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                
                                <!-- Empty State -->
                                <Border Visibility="{Binding HasNotifications, Converter={StaticResource InverseBooleanToVisibilityConverter}}" 
                                        Padding="32">
                                    <StackPanel HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="BellOff" 
                                                               Width="48" Height="48" 
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               HorizontalAlignment="Center"/>
                                        <TextBlock Text="Aucune notification" 
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                                 FontSize="14"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,12,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </materialDesign:PopupBox>

                        <!-- Profil Utilisateur -->
                        <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                            <materialDesign:PopupBox.ToggleContent>
                                <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="20" Width="40" Height="40" Cursor="Hand">
                                    <materialDesign:PackIcon Kind="AccountCircle" 
                                                           Width="24" Height="24" 
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"/>
                                </Border>
                            </materialDesign:PopupBox.ToggleContent>
                            
                            <StackPanel Width="200" Margin="16">
                                <!-- User Info Header -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Background="{DynamicResource MaterialDesignPaper}" CornerRadius="20" Width="40" Height="40" Margin="0,0,12,0">
                                        <materialDesign:PackIcon Kind="User" 
                                                               Width="20" Height="20" 
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CurrentUser.Username}" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding CurrentUser.Role}" FontSize="12" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        <TextBlock Text="{Binding CurrentUser.HouseCode}" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                                
                                <Separator Background="#EEE" Margin="0,0,0,12"/>
                                
                                <!-- Logout Button -->
                                <Button Command="{Binding LogoutCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Foreground="#D32F2F"
                                        HorizontalContentAlignment="Left"
                                        Padding="8,4"
                                        Height="Auto">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Logout" Margin="0,0,12,0"/>
                                        <TextBlock Text="Déconnexion"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:PopupBox>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Zone de Contenu Dynamique avec Transitions -->
            <materialDesign:TransitioningContent Grid.Row="1"
                           Content="{Binding CurrentView}"
                           Margin="24">
                <materialDesign:TransitioningContent.OpeningEffect>
                    <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.3"/>
                </materialDesign:TransitioningContent.OpeningEffect>
            </materialDesign:TransitioningContent>

            <!-- Global Snackbar -->
            <materialDesign:Snackbar MessageQueue="{Binding MessageQueue}" Grid.Row="1" />
        </Grid>
    </materialDesign:DrawerHost>
</Window>
