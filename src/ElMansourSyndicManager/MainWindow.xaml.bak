<Window x:Class="ElMansourSyndicManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:ElMansourSyndicManager.Views"
        xmlns:viewmodels="clr-namespace:ElMansourSyndicManager.ViewModels"
        xmlns:converters="clr-namespace:ElMansourSyndicManager.Converters"
        mc:Ignorable="d"
        Title="El Mansour Syndic Manager"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/Assets/logo.png"
        Background="{StaticResource AppBackgroundBrush}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:NotificationBackgroundConverter x:Key="NotificationBackgroundConverter"/>
        
        <!-- Style de Navigation Moderne -->
        <Style x:Key="ModernNavItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="16,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Indicateur de sélection (Glow) -->
                                <Border x:Name="SelectionIndicator" 
                                        Grid.Column="0"
                                        Width="4" Height="24" 
                                        CornerRadius="2"
                                        Background="{StaticResource PrimaryBrush}"
                                        HorizontalAlignment="Left"
                                        Margin="-20,0,0,0"
                                        Opacity="0">
                                    <!-- Effect removed -->
                                </Border>
                                
                                <ContentPresenter Grid.ColumnSpan="2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#10FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#203B82F6"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter TargetName="SelectionIndicator" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Fond Global avec Glows -->
    <Grid>
        <!-- Éléments décoratifs d'arrière-plan -->
        <Ellipse Width="800" Height="800" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-400,-200,0" Opacity="0.3">
            <Ellipse.Fill>
                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="100"/>
            </Ellipse.Effect>
        </Ellipse>
        
        <Ellipse Width="600" Height="600" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-200,0,0,-200" Opacity="0.2">
            <Ellipse.Fill>
                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="#4C1D95" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="100"/>
            </Ellipse.Effect>
        </Ellipse>

        <materialDesign:DrawerHost x:Name="DrawerHost"
                                  IsLeftDrawerOpen="True"
                                  OpenMode="Standard">
            
            <!-- Menu Latéral (Glassmorphism) -->
            <materialDesign:DrawerHost.LeftDrawerContent>
                <Grid Width="280">
                    <Border Background="{StaticResource GlassSurfaceBrush}" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="0,0,1,0">
                        <DockPanel>
                            <!-- En-tête du Menu -->
                            <StackPanel DockPanel.Dock="Top" Margin="30,50,30,40">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Image Source="/Assets/logo.png" Width="40" Height="40" Margin="0,0,15,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="El Mansour" 
                                                 FontSize="20" 
                                                 FontWeight="Bold" 
                                                 Foreground="White"/>
                                        <TextBlock Text="Syndic Manager" 
                                                 FontSize="12" 
                                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <!-- Profil Utilisateur (Bas de page) -->
                            <Border DockPanel.Dock="Bottom" Margin="20,0,20,30" Padding="15" Background="#10FFFFFF" CornerRadius="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Background="{StaticResource PrimaryGradientBrush}">
                                        <TextBlock Text="{Binding CurrentUser.Username, Converter={StaticResource StringToInitialsConverter}}" 
                                                 Foreground="White" 
                                                 FontWeight="Bold" 
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CurrentUser.Username}" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                                        <TextBlock Text="{Binding CurrentUser.Role}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    
                                    <materialDesign:PopupBox Grid.Column="2" PlacementMode="TopAndAlignRightEdges" StaysOpen="False" Foreground="{StaticResource TextSecondaryBrush}">
                                        <StackPanel Width="150">
                                            <Button Command="{Binding LogoutCommand}" Content="Déconnexion" />
                                        </StackPanel>
                                    </materialDesign:PopupBox>
                                </Grid>
                            </Border>

                            <!-- Liste de Navigation -->
                            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                <ListBox x:Name="NavigationListBox"
                                        ItemsSource="{Binding NavigationItems}"
                                        SelectionMode="Single"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        SelectedItem="{Binding SelectedNavigationItem}"
                                        ItemContainerStyle="{StaticResource ModernNavItem}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                                       Width="20" Height="20" 
                                                                       Margin="0,0,16,0"
                                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Title}" 
                                                         FontSize="15"
                                                         VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </Grid>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <!-- Contenu Principal -->
            <Grid Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Barre Supérieure Transparente -->
                <Grid Grid.Row="0" Margin="30,20,30,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bouton Hamburger -->
                    <ToggleButton Grid.Column="0"
                                 Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                 IsChecked="{Binding ElementName=DrawerHost, Path=IsLeftDrawerOpen}"
                                 Foreground="White"
                                 Width="24" Height="24"
                                 Margin="0,0,20,0"/>

                    <!-- Titre de la page active -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding SelectedNavigationItem.Title}"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center">
                        <!-- Effect removed -->
                    </TextBlock>

                    <!-- Actions (Notifications) -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                            <materialDesign:PopupBox.ToggleContent>
                                <Grid Cursor="Hand">
                                    <Border Background="#10FFFFFF" CornerRadius="12" Width="40" Height="40">
                                        <materialDesign:PackIcon Kind="BellOutline" Width="20" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Background="#EF4444" CornerRadius="6" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,8,0"
                                            Visibility="{Binding HasNotifications, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </materialDesign:PopupBox.ToggleContent>
                            
                            <Border Background="#E62C3E50" CornerRadius="12" Width="350" Padding="0" BorderBrush="#D4AF37" BorderThickness="2">
                                <Border.Effect>
                                    <DropShadowEffect Color="#D4AF37" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Border Background="#33D4AF37" Padding="16" CornerRadius="12,12,0,0">
                                        <TextBlock Text="Notifications" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                    </Border>
                                    <StackPanel Padding="16">
                                        <TextBlock Text="Aucune nouvelle notification" Foreground="#BDC3C7" FontSize="14" HorizontalAlignment="Center" Margin="0,20"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </materialDesign:PopupBox>
                    </StackPanel>
                </Grid>

                <!-- Zone de Contenu Dynamique -->
                <materialDesign:TransitioningContent Grid.Row="1"
                               Content="{Binding CurrentView}"
                               Margin="30,10,30,30">
                    <materialDesign:TransitioningContent.OpeningEffect>
                        <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.4"/>
                    </materialDesign:TransitioningContent.OpeningEffect>
                </materialDesign:TransitioningContent>

                <!-- Global Snackbar -->
                <materialDesign:Snackbar MessageQueue="{Binding MessageQueue}" Grid.Row="1" />
            </Grid>
        </materialDesign:DrawerHost>
    </Grid>
</Window>
