<UserControl x:Class="ElMansourSyndicManager.Views.DocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:ElMansourSyndicManager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- Main Content -->
            <StackPanel Margin="0">
                <!-- Header -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Gestion des Documents" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Archives et fichiers partagés" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Command="{Binding LoadCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Content="Actualiser" 
                                Foreground="{StaticResource PrimaryBrush}"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                Margin="0,0,16,0"
                                Height="40"/>
                        <Button Command="{Binding UploadCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Content="Ajouter"
                                Width="140"/>
                    </StackPanel>
                </Grid>

                <!-- Search Bar -->
                <Border Style="{StaticResource GlassCard}" Margin="0,0,0,24" Padding="24">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Rechercher..." 
                                 Style="{StaticResource ModernTextBox}" 
                                 Width="300" 
                                 Margin="0,0,16,0">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Command="{Binding SearchCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Content="Rechercher" 
                                Foreground="{StaticResource PrimaryBrush}"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                Margin="0,0,16,0"
                                Height="40"/>
                        <ComboBox ItemsSource="{Binding FilterCategories}" 
                                  SelectedItem="{Binding SelectedCategoryFilter}" 
                                  materialDesign:HintAssist.Hint="Catégorie" 
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Width="150"/>
                    </StackPanel>
                </Border>

                <!-- DataGrid Card -->
                <Border Style="{StaticResource GlassCard}" Padding="0">
                    <StackPanel>
                        <Grid Margin="24">
                            <TextBlock Text="Liste des Documents" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Grid>
                        
                        <DataGrid ItemsSource="{Binding Documents}" SelectedItem="{Binding SelectedDocument}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  GridLinesVisibility="None"
                                  materialDesign:DataGridAssist.CellPadding="16 12 12 12"
                                  SelectionMode="Single">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="16,12,12,12"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#20FFFFFF"/>
                                </Style>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                </Style>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#10FFFFFF"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nom du fichier" Binding="{Binding FileName}" Width="*"/>
                                <DataGridTextColumn Header="Catégorie" Binding="{Binding Category}" Width="120"/>
                                <DataGridTextColumn Header="Taille" Binding="{Binding FileSize, StringFormat={}{0:N0} octets}" Width="120"/>
                                <DataGridTextColumn Header="Ajouté par" Binding="{Binding UploadedBy}" Width="120"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy}}" Width="120"/>
                                
                                <DataGridTemplateColumn Header="Actions" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Command="{Binding DataContext.OpenCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        ToolTip="Ouvrir"
                                                        Foreground="{StaticResource InfoBrush}"
                                                        Margin="4,0">
                                                    <materialDesign:PackIcon Kind="Eye" Width="20" Height="20"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="Supprimer"
                                                        Foreground="{StaticResource ErrorBrush}"
                                                        Margin="4,0">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=DataGrid}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <materialDesign:PackIcon Kind="Delete" Width="20" Height="20"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Ouvrir" Command="{Binding OpenCommand}"/>
                                    <Separator/>
                                    <MenuItem Header="Supprimer" Command="{Binding DeleteCommand}" Foreground="Red"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource PrimaryBrush}"/>
            </Grid>

            <!-- Upload Form Overlay -->
            <Grid Background="#B0000000" Visibility="{Binding IsUploadFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Style="{StaticResource GlassCard}" Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="32">
                    <StackPanel>
                        <TextBlock Text="Ajouter un Document" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,32"/>

                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding UploadFilePath, Mode=TwoWay}" 
                                     materialDesign:HintAssist.Hint="Chemin du fichier" 
                                     Style="{StaticResource ModernTextBox}" 
                                     IsReadOnly="True"/>
                            <Button Grid.Column="1" 
                                    Command="{Binding BrowseFileCommand}" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Content="..." 
                                    Foreground="{StaticResource PrimaryBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}"
                                    Margin="10,0,0,0"/>
                        </Grid>
                        
                        <ComboBox ItemsSource="{Binding Categories}" 
                                  SelectedItem="{Binding UploadCategory, Mode=TwoWay}" 
                                  materialDesign:HintAssist.Hint="Catégorie" 
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,24"/>
                        
                        <TextBox Text="{Binding UploadDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Description" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Margin="0,0,0,24" 
                                 TextWrapping="Wrap" 
                                 Height="80"/>

                        <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource ErrorBrush}" TextWrapping="Wrap" Margin="0,0,0,24"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Command="{Binding CancelUploadCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                    Content="Annuler" 
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    Margin="0,0,16,0"/>
                            <Button Command="{Binding SaveUploadCommand}" 
                                    Style="{StaticResource ModernButton}" 
                                    Content="Ajouter"
                                    Width="120"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
