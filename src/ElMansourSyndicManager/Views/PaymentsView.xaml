<UserControl x:Class="ElMansourSyndicManager.Views.PaymentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Header -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Gestion des Paiements" FontSize="28" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text="Suivez et gérez les cotisations des résidents" FontSize="16" Foreground="#777" Margin="0,4,0,0"/>
                    </StackPanel>
                    <Button Command="{Binding ShowCreateFormCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Content="Nouveau Paiement"
                            HorizontalAlignment="Right"
                            Height="36"/>
                </Grid>

                <!-- Filters Card -->
                <materialDesign:Card UniformCornerRadius="12" Background="White" Margin="0,0,0,16" Padding="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Mois sélectionné:" FontSize="14" Foreground="#777" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <DatePicker SelectedDate="{Binding SelectedMonthDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="150"
                                    materialDesign:HintAssist.Hint="Choisir le mois"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,24,0"/>
                        <Button Command="{Binding RefreshCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Content="Actualiser"
                                Height="36"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Payments List Card -->
                <materialDesign:Card UniformCornerRadius="12" Background="White">
                    <StackPanel>
                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="20">
                            <Grid>
                                <TextBlock Text="Liste des Paiements" FontWeight="SemiBold" FontSize="18" Foreground="#333"/>
                                <TextBlock Text="{Binding Payments.Count, StringFormat='{}{0} enregistrements'}" 
                                          Foreground="#999" 
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center" 
                                          FontSize="13"/>
                            </Grid>
                        </Border>

                        <DataGrid ItemsSource="{Binding Payments}"
                                 SelectedItem="{Binding SelectedPayment}"
                                 AutoGenerateColumns="False"
                                 HeadersVisibility="Column"
                                 CanUserAddRows="False"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Background="White"
                                 RowBackground="White"
                                 AlternatingRowBackground="#F9FAFB"
                                 GridLinesVisibility="Horizontal"
                                 HorizontalGridLinesBrush="#E5E7EB"
                                 Padding="0,8">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Maison" Binding="{Binding HouseCode}" Width="120"/>
                                <DataGridTextColumn Header="Montant" Binding="{Binding Amount, StringFormat={}{0:N2} TND}" Width="150" FontWeight="Bold"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat={}{0:dd/MM/yyyy}}" Width="150"/>
                                <DataGridTextColumn Header="Statut" Binding="{Binding Status}" Width="120"/>
                                <DataGridTemplateColumn Header="Actions" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Command="{Binding DataContext.MarkAsPaidCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                       CommandParameter="{Binding}"
                                                       Style="{StaticResource MaterialDesignIconButton}"
                                                       ToolTip="Marquer comme payé"
                                                       Foreground="#4CAF50">
                                                    <materialDesign:PackIcon Kind="CheckCircleOutline"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.GenerateReceiptCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                       CommandParameter="{Binding}"
                                                       Style="{StaticResource MaterialDesignIconButton}"
                                                       ToolTip="Générer le reçu"
                                                       Foreground="#2196F3"
                                                       Margin="8,0,0,0">
                                                    <materialDesign:PackIcon Kind="FileDocumentOutline"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.DeletePaymentCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                       CommandParameter="{Binding}"
                                                       Style="{StaticResource MaterialDesignIconButton}"
                                                       ToolTip="Supprimer (Admin uniquement)"
                                                       Foreground="#F44336"
                                                       Margin="8,0,0,0"
                                                       Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=DataGrid}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <materialDesign:PackIcon Kind="DeleteOutline"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Create Payment Form Overlay -->
        <Grid Background="#B0000000" Visibility="{Binding IsFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <materialDesign:Card Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="24" UniformCornerRadius="12">
                <StackPanel>
                    <TextBlock Text="Nouveau Paiement" FontSize="22" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,24"/>

                    <ComboBox ItemsSource="{Binding Houses}" 
                              SelectedValue="{Binding SelectedHouseCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMemberPath="Code"
                              SelectedValuePath="Code"
                              materialDesign:HintAssist.Hint="Sélectionner une maison" 
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                              Margin="0,0,0,16"/>
                    
                    <TextBox Text="{Binding PaymentAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             materialDesign:HintAssist.Hint="Montant (TND)" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                             Margin="0,0,0,16"/>
                    
                    <DatePicker SelectedDate="{Binding TargetMonth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                materialDesign:HintAssist.Hint="Mois concerné (Sélectionnez n'importe quel jour)" 
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                                Margin="0,0,0,16"/>

                    <DatePicker SelectedDate="{Binding PaymentDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                materialDesign:HintAssist.Hint="Date de paiement" 
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                                Margin="0,0,0,24"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding CancelFormCommand}" 
                                Style="{StaticResource MaterialDesignFlatButton}" 
                                Content="Annuler" 
                                Margin="0,0,12,0"/>
                        <Button Command="{Binding CreatePaymentCommand}" 
                                Style="{StaticResource MaterialDesignRaisedButton}" 
                                Content="Créer le Paiement"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
