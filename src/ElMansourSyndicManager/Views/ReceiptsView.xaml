<UserControl x:Class="ElMansourSyndicManager.Views.ReceiptsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200">
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Gestion des Reçus"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Consultez et téléchargez les reçus de paiement"
                          FontSize="16"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          Margin="0,4,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                   Command="{Binding RefreshCommand}"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   BorderBrush="{StaticResource PrimaryBrush}"
                   Foreground="{StaticResource PrimaryBrush}"
                   Height="40">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Actualiser"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Search Card -->
        <Border Grid.Row="1" Style="{StaticResource GlassCard}" Margin="0,0,0,24" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="Magnify" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       Width="24" Height="24" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,16,0"/>

                <TextBox Grid.Column="1"
                        Text="{Binding SelectedHouseCode, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="Rechercher par code maison (ex: D05)"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        FontSize="14"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        VerticalAlignment="Center"
                        Margin="0,0,24,0"/>

                <DatePicker Grid.Column="2"
                            SelectedDate="{Binding SelectedMonthDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Width="200"
                            materialDesign:HintAssist.Hint="Choisir le mois"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            VerticalAlignment="Center"
                            Margin="0,0,24,0"/>

                <Button Grid.Column="3" 
                       Command="{Binding RefreshCommand}"
                       Style="{StaticResource ModernButton}"
                       Width="140">
                    <TextBlock Text="Rechercher"/>
                </Button>
            </Grid>
        </Border>

        <!-- Receipts List Card -->
        <Border Grid.Row="2" Style="{StaticResource GlassCard}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Grid Grid.Row="0" Margin="24">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="History" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Historique des Reçus" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding Receipts.Count, StringFormat='{}{0} reçus trouvés'}" 
                                 Foreground="{StaticResource TextSecondaryBrush}" 
                                 VerticalAlignment="Center" 
                                 FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                         x:Name="ReceiptsDataGrid"
                         ItemsSource="{Binding Receipts}"
                         SelectedItem="{Binding SelectedReceipt}"
                         AutoGenerateColumns="False"
                         HeadersVisibility="Column"
                         CanUserAddRows="False"
                         IsReadOnly="True"
                         BorderThickness="0"
                         Background="Transparent"
                         GridLinesVisibility="None"
                         materialDesign:DataGridAssist.CellPadding="16 12 12 12"
                         Loaded="ReceiptsDataGrid_Loaded">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="16,12,12,12"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#20FFFFFF"/>
                        </Style>
                        <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        </Style>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#10FFFFFF"/>
                        </Style>
                    </DataGrid.Resources>
                    
                    <DataGrid.Columns>
                        <!-- Date -->
                        <DataGridTemplateColumn Header="Date de Génération" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CalendarClock" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding GeneratedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Nom du Fichier -->
                        <DataGridTemplateColumn Header="Fichier" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FilePdfBox" Foreground="#EF4444" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding FileName}" FontWeight="Medium" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Taille -->
                        <DataGridTextColumn Header="Taille" 
                                          Binding="{Binding FileSize, Converter={StaticResource FileSizeConverter}}" 
                                          Width="120"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                         />

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="Auto" MinWidth="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Loaded="ActionButtons_Loaded">
                                        <Button Command="{Binding DataContext.ViewReceiptCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Voir"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               Width="32" Height="32"
                                               Visibility="Visible">
                                            <materialDesign:PackIcon Kind="Eye"/>
                                        </Button>
                                        
                                        <Button Command="{Binding DataContext.PrintReceiptCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Imprimer"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Width="32" Height="32"
                                               Margin="8,0,0,0"
                                               Visibility="Visible">
                                            <materialDesign:PackIcon Kind="Printer"/>
                                        </Button>

                                        <Button Command="{Binding DataContext.DownloadReceiptCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Télécharger"
                                               Foreground="#10B981"
                                               Width="32" Height="32"
                                               Margin="8,0,0,0"
                                               Visibility="Visible">
                                            <materialDesign:PackIcon Kind="Download"/>
                                        </Button>

                                        <Button Command="{Binding DataContext.EmailReceiptCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Envoyer par email"
                                               Foreground="#F59E0B"
                                               Width="32" Height="32"
                                               Margin="8,0,0,0"
                                               Visibility="Visible">
                                            <materialDesign:PackIcon Kind="Email"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel Grid.Row="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Visibility="{Binding Receipts.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="FileDocumentOutline" 
                                           Width="64" Height="64" 
                                           Foreground="#20FFFFFF" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,16"/>
                    <TextBlock Text="Aucun reçu trouvé" 
                             FontSize="18" 
                             FontWeight="SemiBold" 
                             Foreground="{StaticResource TextSecondaryBrush}"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Sélectionnez un code maison pour voir l'historique" 
                             FontSize="14" 
                             Foreground="{StaticResource TextSecondaryBrush}"
                             Opacity="0.7"
                             HorizontalAlignment="Center"
                             Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <ProgressBar Grid.Row="2"
                    IsIndeterminate="True"
                    Height="4"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource PrimaryBrush}"/>
    </Grid>
</UserControl>
