<UserControl x:Class="ElMansourSyndicManager.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:ElMansourSyndicManager.ViewModels"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance viewModels:ReportsViewModel}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Rapports Financiers"
                              FontSize="32"
                              FontWeight="Bold"
                              Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Générez et analysez les performances financières"
                              FontSize="16"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                       Command="{Binding LoadHistoryCommand}"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       BorderBrush="{StaticResource PrimaryBrush}"
                       Foreground="{StaticResource PrimaryBrush}"
                       Height="40">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Actualiser"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Generation Card -->
            <Border Grid.Row="1" Style="{StaticResource GlassCard}" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Border Background="#20D4AF37" CornerRadius="12" Width="48" Height="48" Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="FileChart" Width="24" Height="24" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Nouveau Rapport" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Sélectionnez le type de rapport à générer" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                            <RadioButton GroupName="ReportType" IsChecked="True" 
                                         Command="{Binding SetReportTypeCommand}" CommandParameter="Monthly"
                                         Margin="0,0,24,0" Style="{StaticResource MaterialDesignChoiceChipRadioButton}">
                                <StackPanel Orientation="Horizontal" Margin="4">
                                    <materialDesign:PackIcon Kind="CalendarMonth" Margin="0,0,8,0"/>
                                    <TextBlock Text="Rapport Mensuel"/>
                                </StackPanel>
                            </RadioButton>
                            
                            <RadioButton GroupName="ReportType" 
                                         Command="{Binding SetReportTypeCommand}" CommandParameter="Yearly"
                                         Style="{StaticResource MaterialDesignChoiceChipRadioButton}">
                                <StackPanel Orientation="Horizontal" Margin="4">
                                    <materialDesign:PackIcon Kind="CalendarRange" Margin="0,0,8,0"/>
                                    <TextBlock Text="Rapport Annuel"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                        
                        <!-- Date Selection -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <!-- Monthly Report: Show Month and Year Dropdowns -->
                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsMonthlyReport, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ComboBox ItemsSource="{Binding Months}"
                                         SelectedValue="{Binding SelectedMonthNumber}"
                                         DisplayMemberPath="Name"
                                         SelectedValuePath="Number"
                                         materialDesign:HintAssist.Hint="Mois"
                                         Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Width="150"
                                         Margin="0,0,20,0"/>
                                
                                <TextBox Text="{Binding SelectedYear}" 
                                        materialDesign:HintAssist.Hint="Année" 
                                        Style="{StaticResource ModernTextBox}" 
                                        Width="100"/>
                            </StackPanel>
                            
                            <!-- Yearly Report: Show only Year Input -->
                            <TextBox Text="{Binding SelectedYear}" 
                                    materialDesign:HintAssist.Hint="Année" 
                                    Style="{StaticResource ModernTextBox}" 
                                    Width="150"
                                    Visibility="{Binding IsYearlyReport, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Format Selection -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="Format :" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <RadioButton Content="PDF" IsChecked="True" 
                                         Command="{Binding SetExportFormatCommand}" CommandParameter="PDF" 
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Margin="0,0,15,0"/>
                            <RadioButton Content="Excel" 
                                         Command="{Binding SetExportFormatCommand}" CommandParameter="Excel"
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <Button Command="{Binding GenerateReportCommand}"
                               Style="{StaticResource ModernButton}"
                               Height="50"
                               HorizontalAlignment="Left"
                               Width="220">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AutoFix" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Générer le Rapport" FontWeight="SemiBold" FontSize="16"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Illustration/Icon on the right -->
                    <materialDesign:PackIcon Grid.Column="1" 
                                           Kind="Finance" 
                                           Width="180" Height="180" 
                                           Foreground="#10FFFFFF"
                                           VerticalAlignment="Center"
                                           Margin="40,0,0,0"/>
                </Grid>
            </Border>

            <!-- Recent Reports / History -->
            <Border Grid.Row="2" Style="{StaticResource GlassCard}" Padding="0">
                <StackPanel>
                    <Grid Margin="24">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="History" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Derniers Rapports Générés" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Grid>
                    
                    <DataGrid ItemsSource="{Binding ReportHistory}" AutoGenerateColumns="False" IsReadOnly="True"
                              materialDesign:DataGridAssist.CellPadding="16 12 12 12" 
                              MaxHeight="300"
                              Background="Transparent"
                              GridLinesVisibility="None"
                              BorderThickness="0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="16,12,12,12"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#20FFFFFF"/>
                            </Style>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Style>
                            <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#10FFFFFF"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding ReportType}" Width="100"/>
                            <DataGridTextColumn Header="Période" Binding="{Binding Period}" Width="100"/>
                            <DataGridTextColumn Header="Date de génération" Binding="{Binding GeneratedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="150"/>
                            <DataGridTextColumn Header="Généré par" Binding="{Binding GeneratedBy}" Width="120"/>
                            <DataGridTextColumn Header="Format" Binding="{Binding Format}" Width="80"/>
                            <DataGridTemplateColumn Header="Actions" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Command="{Binding DataContext.ViewReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="Ouvrir"
                                                    Foreground="{StaticResource InfoBrush}"
                                                    Width="32" Height="32"
                                                    Margin="4,0">
                                                <materialDesign:PackIcon Kind="Eye"/>
                                            </Button>
                                            
                                            <Button Command="{Binding DataContext.DownloadReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="Télécharger"
                                                    Foreground="{StaticResource SuccessBrush}"
                                                    Width="32" Height="32"
                                                    Margin="4,0">
                                                <materialDesign:PackIcon Kind="Download"/>
                                            </Button>

                                            <Button Command="{Binding DataContext.DeleteReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Supprimer"
                                                    Foreground="{StaticResource ErrorBrush}"
                                                    Width="32" Height="32"
                                                    Margin="4,0">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Delete"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
