<UserControl x:Class="ElMansourSyndicManager.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:ElMansourSyndicManager.ViewModels"
             xmlns:converters="clr-namespace:ElMansourSyndicManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0">
            <!-- Header -->
            <Grid Margin="0,0,0,32">
                <StackPanel>
                    <TextBlock Text="Paramètres" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Configuration de l'application" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>
                <Button Command="{Binding SaveCommand}" 
                        Style="{StaticResource ModernButton}" 
                        Content="Enregistrer"
                        HorizontalAlignment="Right"
                        Width="160"/>
            </Grid>

            <!-- Appearance Settings -->
            <Border Style="{StaticResource GlassCard}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Apparence" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,24"/>
                    <StackPanel>
                        <TextBlock Text="Thème" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Themes}" 
                                  SelectedItem="{Binding SelectedTheme}" 
                                  materialDesign:HintAssist.Hint="Sélectionner un thème" 
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,24"/>
                        
                        <TextBlock Text="Langue" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Languages}" 
                                  SelectedItem="{Binding SelectedLanguage}" 
                                  materialDesign:HintAssist.Hint="Sélectionner une langue" 
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Notifications Settings -->
            <Border Style="{StaticResource GlassCard}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Notifications" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,24"/>
                    <StackPanel>
                        <CheckBox IsChecked="{Binding NotificationsEnabled}" 
                                  Content="Activer les notifications" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,16"/>
                        <CheckBox IsChecked="{Binding EnableEmailNotifications}" 
                                  Content="Notifications par email" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,16"/>
                        <CheckBox IsChecked="{Binding EnablePaymentReminders}" 
                                  Content="Rappels de paiement"
                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Backup Settings -->
            <Border Style="{StaticResource GlassCard}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Sauvegarde Cloud" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,24"/>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="CloudCheck" Width="24" Height="24" Foreground="{StaticResource SuccessBrush}" Margin="0,0,12,0"/>
                            <TextBlock Text="Vos données sont synchronisées et sauvegardées automatiquement sur le Cloud (Somee.com)." 
                                     TextWrapping="Wrap" 
                                     VerticalAlignment="Center"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     FontSize="14"/>
                        </StackPanel>
                        <TextBlock Text="Pour restaurer une sauvegarde, veuillez accéder à votre panneau de contrôle Somee." 
                                 Foreground="{StaticResource TextSecondaryBrush}" 
                                 FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- About Section -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="À propos" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,24"/>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="Information" Width="24" Height="24" Foreground="{StaticResource InfoBrush}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="El Mansour Syndic Manager" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="Version : " 
                                             FontSize="14" 
                                             Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding AppVersion}" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="Application de gestion de syndic pour la résidence El Mansour" 
                                 Foreground="{StaticResource TextSecondaryBrush}" 
                                 FontSize="13"
                                 TextWrapping="Wrap"
                                 Margin="36,0,0,16"/>
                        
                        <!-- Check for Updates Button -->
                        <StackPanel Margin="36,0,0,16">
                            <Button Command="{Binding CheckForUpdatesCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Width="220"
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding IsCheckingForUpdates, Converter={StaticResource InverseBooleanConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Update" 
                                                           Width="18" 
                                                           Height="18" 
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>
                                    <TextBlock Text="Vérifier les mises à jour" 
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Update Status -->
                            <TextBlock Text="{Binding UpdateStatus}" 
                                     Foreground="{StaticResource TextSecondaryBrush}" 
                                     FontSize="12"
                                     Margin="0,8,0,0"
                                     Visibility="{Binding UpdateStatus, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>
                        
                        <TextBlock Text="© 2024 El Mansour. Tous droits réservés." 
                                 Foreground="{StaticResource TextSecondaryBrush}" 
                                 FontSize="12"
                                 FontStyle="Italic"
                                 Margin="36,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
