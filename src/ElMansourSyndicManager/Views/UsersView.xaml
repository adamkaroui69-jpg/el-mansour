<UserControl x:Class="ElMansourSyndicManager.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:ElMansourSyndicManager.ViewModels"
             xmlns:converters="clr-namespace:ElMansourSyndicManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance viewModels:UsersViewModel}">
    
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- Main Content -->
            <StackPanel Margin="24">
                <!-- Header -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Gestion des Utilisateurs" FontSize="28" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text="Administration des comptes et permissions" FontSize="16" Foreground="#777" Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Command="{Binding LoadUsersCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Content="Actualiser" 
                                Margin="0,0,12,0"
                                Height="36"/>
                        <Button Command="{Binding CreateUserCommand}" 
                                Style="{StaticResource MaterialDesignRaisedButton}" 
                                Content="Nouvel Utilisateur"
                                Height="36"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid Card -->
                <materialDesign:Card UniformCornerRadius="12" Background="White">
                    <StackPanel>
                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="20">
                            <TextBlock Text="Liste des Utilisateurs" FontWeight="SemiBold" FontSize="18" Foreground="#333"/>
                        </Border>
                        
                        <DataGrid ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="White"
                                  RowBackground="White"
                                  AlternatingRowBackground="#F9FAFB"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E5E7EB"
                                  Padding="0,8"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nom d'utilisateur" Binding="{Binding Username}" Width="*"/>
                                <DataGridTextColumn Header="Rôle" Binding="{Binding Role}" Width="150"/>
                                <DataGridCheckBoxColumn Header="Actif" Binding="{Binding IsActive}" Width="80"/>
                                <DataGridTextColumn Header="Dernière connexion" Binding="{Binding LastLoginAt, StringFormat={}{0:dd/MM/yyyy}}" Width="150"/>
                                <DataGridTemplateColumn Header="Actions" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Command="{Binding DataContext.UpdateUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}" 
                                                        ToolTip="Modifier">
                                                    <materialDesign:PackIcon Kind="Pencil"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}" 
                                                        ToolTip="Supprimer (Admin uniquement)"
                                                        Foreground="Red"
                                                        Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=DataGrid}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <materialDesign:PackIcon Kind="Delete"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Modifier" Command="{Binding UpdateUserCommand}"/>
                                    <MenuItem Header="Réinitialiser mot de passe" Command="{Binding ResetPasswordCommand}"/>
                                    <Separator/>
                                    <MenuItem Header="Supprimer" Command="{Binding DeleteUserCommand}" Foreground="Red"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- Form Overlay -->
            <Grid Background="#B0000000" Visibility="{Binding IsFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <materialDesign:Card Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="24" UniformCornerRadius="12">
                    <StackPanel>
                        <TextBlock Text="{Binding FormTitle}" FontSize="22" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,24"/>

                        <TextBox Text="{Binding FormName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Prénom" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,16"/>
                        
                        <TextBox Text="{Binding FormSurname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Nom" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,16"/>
                        
                        <TextBox Text="{Binding FormHouseCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Code Maison" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,16" IsEnabled="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}"/>
                        
                        <TextBox Text="{Binding FormCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Mot de passe (6 chiffres)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,16" Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        
                        <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding FormRole, Mode=TwoWay}" materialDesign:HintAssist.Hint="Rôle" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,16"/>
                        
                        <CheckBox IsChecked="{Binding FormIsActive, Mode=TwoWay}" Content="Compte actif" Margin="0,0,0,16"/>

                        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Command="{Binding CancelUserCommand}" Style="{StaticResource MaterialDesignFlatButton}" Content="Annuler" Margin="0,0,12,0"/>
                            <Button Command="{Binding SaveUserCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Content="Enregistrer"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
