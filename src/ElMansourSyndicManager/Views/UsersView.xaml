<UserControl x:Class="ElMansourSyndicManager.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:ElMansourSyndicManager.ViewModels"
             xmlns:converters="clr-namespace:ElMansourSyndicManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance viewModels:UsersViewModel}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- Main Content -->
            <StackPanel Margin="0">
                <!-- Header -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Gestion des Utilisateurs" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Administration des comptes et permissions" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Command="{Binding LoadUsersCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Content="Actualiser" 
                                Foreground="{StaticResource PrimaryBrush}"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                Margin="0,0,16,0"
                                Height="40"/>
                        <Button Command="{Binding CreateUserCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Content="Nouvel Utilisateur"
                                Width="180"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid Card -->
                <Border Style="{StaticResource GlassCard}" Padding="0">
                    <StackPanel>
                        <Grid Margin="24">
                            <TextBlock Text="Liste des Utilisateurs" FontWeight="SemiBold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Grid>
                        
                        <DataGrid ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  GridLinesVisibility="None"
                                  materialDesign:DataGridAssist.CellPadding="16 12 12 12"
                                  SelectionMode="Single">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="16,12,12,12"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#20FFFFFF"/>
                                </Style>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                </Style>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#10FFFFFF"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nom d'utilisateur" Binding="{Binding Username}" Width="*"/>
                                <DataGridTextColumn Header="Rôle" Binding="{Binding Role}" Width="150"/>
                                <DataGridCheckBoxColumn Header="Actif" Binding="{Binding IsActive}" Width="80"/>
                                <DataGridTextColumn Header="Dernière connexion" Binding="{Binding LastLoginAt, StringFormat={}{0:dd/MM/yyyy}}" Width="150"/>
                                <DataGridTemplateColumn Header="Actions" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Command="{Binding DataContext.UpdateUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}" 
                                                        ToolTip="Modifier"
                                                        Foreground="{StaticResource PrimaryBrush}">
                                                    <materialDesign:PackIcon Kind="Pencil"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}" 
                                                        ToolTip="Supprimer (Admin uniquement)"
                                                        Foreground="{StaticResource ErrorBrush}"
                                                        Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=DataGrid}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <materialDesign:PackIcon Kind="Delete"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Modifier" Command="{Binding UpdateUserCommand}"/>
                                    <MenuItem Header="Réinitialiser mot de passe" Command="{Binding ResetPasswordCommand}"/>
                                    <Separator/>
                                    <MenuItem Header="Supprimer" Command="{Binding DeleteUserCommand}" Foreground="Red"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource PrimaryBrush}"/>
            </Grid>

            <!-- Form Overlay -->
            <Grid Background="#B0000000" Visibility="{Binding IsFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Style="{StaticResource GlassCard}" Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="32">
                    <StackPanel>
                        <TextBlock Text="{Binding FormTitle}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,32"/>

                        <TextBox Text="{Binding FormName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Prénom" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Margin="0,0,0,24"/>
                        
                        <TextBox Text="{Binding FormSurname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Nom" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Margin="0,0,0,24"/>
                        
                        <TextBox Text="{Binding FormHouseCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Code Maison" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Margin="0,0,0,24" 
                                 IsEnabled="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}"/>
                        
                        <TextBox Text="{Binding FormCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Mot de passe (6 chiffres)" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Margin="0,0,0,24" 
                                 Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        
                        <ComboBox ItemsSource="{Binding Roles}" 
                                  SelectedItem="{Binding FormRole, Mode=TwoWay}" 
                                  materialDesign:HintAssist.Hint="Rôle" 
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,24"/>
                        
                        <CheckBox IsChecked="{Binding FormIsActive, Mode=TwoWay}" 
                                  Content="Compte actif" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,24"/>

                        <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource ErrorBrush}" TextWrapping="Wrap" Margin="0,0,0,24"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Command="{Binding CancelUserCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                    Content="Annuler" 
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    Margin="0,0,16,0"/>
                            <Button Command="{Binding SaveUserCommand}" 
                                    Style="{StaticResource ModernButton}" 
                                    Content="Enregistrer"
                                    Width="140"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
